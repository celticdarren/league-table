{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "rootDir": "./src",
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "~/*": [ "*" ]
    }
  },
  "include": [
    "./src/**/*",
    "./src/*"
  ]
}

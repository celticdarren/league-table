{
  "extends": [
    "tslint:latest",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "src/**/*.d.ts"
    ]
  },
  "rules": {
    "indent": [
      true,
      "spaces",
      2
    ],
    "semicolon": [
      true,
      "always"
    ],
    "max-line-length": [
      true,
      120
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "quotemark": [
      true,
      "single"
    ],
    "no-implicit-dependencies": false,
    "no-submodule-imports": [
      true,
      "~"
    ],
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "eofline": true
  }
}
